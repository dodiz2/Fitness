@{
    Layout = null;
}
@model MyFitness.Models.UserInfo
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>Admin Pro Admin Template - The Ultimate Bootstrap 4 Admin Template</title>
    <link href="~/Contentpro/plugins/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/Contentpro/css/style.css" rel="stylesheet">
    <link href="~/Contentpro/css/pages/file-upload.css" rel="stylesheet">
    <link href="~/Contentpro/css/colors/default.css" id="theme" rel="stylesheet">

</head>
<body>
<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header bg-info">
                <h4 class="m-b-15 text-white">Person Info</h4>
            </div>
            <div class="card-body">
                <form action="#">
                    <div class="form-body">
                        <div class="row p-t-20">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="control-label">Nama Lengkap</label>
                                    @Html.TextBoxFor(m => m.NamaLengkap, new { @class = "form-control"})
                                    
          
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="control-label">Tanggal Lahir</label>
                                    @Html.TextBoxFor(m => m.tanggal_lahir, new { @class = "form-control" , @type = "date", placeholder = "dd/mm/yyyy"})
                                   
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="control-label">Gender</label>
                                    <select class="form-control custom-select">
                                        <option value="1">Male</option>
                                        <option value="0">Female</option>
                                    </select>
                                    <small class="form-control-feedback"> Select your gender </small>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="control-label">Seberapa Sering Melakukan Aktifitas Olahraga dalam Satu Minggu</label>
                                    <select class="form-control custom-select">
                                        <option value="">Tidak Sama Sekali</option>
                                        <option value="">Cukup Aktif(Berolahraga 1-3 kali/seminggu)</option>
                                        <option value="">Aktif(Berolahraga 3-5 kali/seminggu)</option>
                                    </select>
                                    
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="control-label">Berat Badan</label>
                                    @Html.TextBoxFor(m => m.BeratBadan, new { @class = "form-control" , @type = "number", placeholder = "Kg"})
                                    

                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="control-label">Tinggi Badan</label>
                                    @Html.TextBoxFor(m => m.TinggiBadan, new { @class = "form-control", @type = "number", placeholder = "Cm" })
                                 

                                </div>
                            </div>

                            <div class="col-md-6" style="margin-left: 780px">
                                <div class="form-group ">
                                    <label class="control-label">Peminatan Pembentukan Otot</label>
                                    <br />
                                    <small class="form-control-feedback"> Minimal 3 Peminatan Otot </small>
                                    <br />
                                    <div class="demo-checkbox">

                                        @Html.TextBoxFor(m => m.Dada, new { @class = "chk-col-black", @type = "checkbox" })
                                        @Html.LabelFor(m => m.Dada)
                                        @Html.TextBoxFor(m => m.Bahu, new { @class = "chk-col-black", @type = "checkbox" })
                                        @Html.LabelFor(m => m.Bahu)
                                        @Html.TextBoxFor(m => m.Punggung, new { @class = "chk-col-black", @type = "checkbox" })
                                        @Html.LabelFor(m => m.Punggung)
                                        @Html.TextBoxFor(m => m.Kaki, new { @class = "chk-col-black", @type = "checkbox" })
                                        @Html.LabelFor(m => m.Kaki)
                                        @Html.TextBoxFor(m => m.Bokong, new { @class = "chk-col-black", @type = "checkbox" })
                                        @Html.LabelFor(m => m.Bokong)
                                        @Html.TextBoxFor(m => m.Perut, new { @class = "chk-col-black", @type = "checkbox" })
                                        @Html.LabelFor(m => m.Perut)
                                        @Html.TextBoxFor(m => m.LenganBicep, new { @class = "chk-col-black", @type = "checkbox" })
                                        @Html.LabelFor(m => m.LenganBicep)
                                        @Html.TextBoxFor(m => m.LenganTricep, new { @class = "chk-col-black", @type = "checkbox" })
                                        @Html.LabelFor(m => m.LenganTricep)
                                    
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    </form>
        </div>
      
            <div class="form-group text-right">
                <button type="button" class="btn btn-inverse">Cancel</button>
                <button type="submit" class="btn btn-success"> <i class="fa fa-check"></i> Submit</button>
            </div>
            </div>
        </div>
    </div>
  
<script src="~/Contentpro/plugins/jquery/jquery.min.js"></script>
<script src="~/Contentpro/plugins/bootstrap/js/popper.min.js"></script>
<script src="~/Contentpro/plugins/bootstrap/js/bootstrap.min.js"></script>
<script src="js/perfect-scrollbar.jquery.min.js"></script>
<script src="js/waves.js"></script>
<script src="js/sidebarmenu.js"></script>
<script src="~/Contentpro/plugins/sticky-kit-master/dist/sticky-kit.min.js"></script>
<script src="~/Contentpro/plugins/sparkline/jquery.sparkline.min.js"></script>
<script src="js/custom.min.js"></script>
<script src="js/jasny-bootstrap.js"></script>
<script src="~/Contentpro/plugins/styleswitcher/jQuery.style.switcher.js"></script>
</body>
</html>